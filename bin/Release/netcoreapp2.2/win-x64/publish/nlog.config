<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="info"
      internalLogFile="C:\inetpub\logs\EAUtilities\internal-nlog.log">

  <!-- enable asp.net core layout renderers -->
  <extensions>
    <add assembly="NLog.Web.AspNetCore"/>
  </extensions>

  <variable name="LogRoot" value="C:\inetpub\logs\EAUtilities"/>

  <!-- the targets to write to -->
  <targets>
    <target xsi:type="File" 
            name="web-log" 
            fileName="${LogRoot}/web-log.log"
            archiveEvery="Day"
            maxArchiveFiles="7"
            archiveFileName="${LogRoot}/web-log-${shortdate}.log"
            layout="${longdate} logName=${logger} logLevel=${lowercase:${level}} message=${message} url=${aspnet-request-url} action=${aspnet-mvc-action} exception=${exception:format=tostring} " />
  </targets>

  <!-- rules to map from logger name to target -->
  <rules>
    <!--Skip non-critical Microsoft logs and so log only own logs-->
    <logger name="Microsoft.*" maxLevel="Info" final="true" /> <!-- BlackHole without writeTo -->
    <logger name="*" minlevel="Trace" writeTo="web-log" />
  </rules>
</nlog>